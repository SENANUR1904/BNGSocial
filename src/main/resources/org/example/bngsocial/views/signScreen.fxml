<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.bngsocial.Controllers.SignScreenController">

    <padding>
        <Insets top="40" bottom="40" left="20" right="20" />
    </padding>

    <Label text="Giriş Yap" styleClass="title-label" />

    <TextField fx:id="usernameField" promptText="Kullanıcı Adı" styleClass="form-field" />
    <PasswordField fx:id="passwordField" promptText="Şifre" styleClass="form-field" />

    <Button fx:id="signInButton" text="Giriş Yap" onAction="#handleSignIn" styleClass="primary-button" />

    <HBox spacing="150" alignment="CENTER">
        <Label fx:id="forgotPasswordLabel" text="Şifremi Unuttum"
               onMouseClicked="#openForgotPassword" styleClass="link-label" />

        <Label fx:id="registerLabel" text="Kayıt Ol"
               onMouseClicked="#openRegister" styleClass="link-label" />
    </HBox>

</VBox>