<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<?import java.net.URL?>
<VBox spacing="15" alignment="CENTER"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.bngsocial.Controllers.SignScreenController">

    <stylesheets>
        <URL value="@../styles/sign_styles.css"/>
    </stylesheets>

    <padding>
        <Insets top="20" bottom="20" left="20" right="20" />
    </padding>

    <!-- ÜSTTE UYGULAMA ADI -->
    <Label text="BNGSOCIAL" styleClass="app-title" />

    <!-- ALTTA EKRAN ADI -->
    <Label text="Giriş Yap" styleClass="screen-title" />

    <TextField fx:id="usernameField" promptText="Kullanıcı Adı"
               styleClass="form-field" />

    <PasswordField fx:id="passwordField" promptText="Şifre"
                   styleClass="form-field" />

    <Button fx:id="signInButton" text="Giriş Yap" onAction="#handleSignIn"
            styleClass="primary-button" />

    <!-- ALTTA LİNKLER - SOL: Kayıt Ol, SAĞ: Şifremi Unuttum -->
    <HBox styleClass="link-container">
        <!-- SOL: Kayıt Ol -->
        <Label fx:id="registerLabel" text="Kayıt Ol"
               onMouseClicked="#openRegister"
               styleClass="link-label" />

        <!-- SAĞ: Şifremi Unuttum -->
        <Label fx:id="forgotPasswordLabel" text="Şifremi Unuttum"
               onMouseClicked="#openForgotPassword"
               styleClass="link-label" />
    </HBox>

</VBox>