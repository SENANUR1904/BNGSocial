<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.shape.Circle?> <?import java.net.URL?>
<VBox spacing="15" alignment="CENTER"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.bngsocial.Controllers.SignScreenController">

    <stylesheets>
        <URL value="@../styles/sign_styles.css"/>
    </stylesheets>

    <padding>
        <Insets top="30" bottom="20" left="20" right="20" />
    </padding>

    <ImageView fx:id="logoView" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
        <VBox.margin>
            <Insets bottom="15.0" />
        </VBox.margin>
        <image>
            <Image url="@../logo.png" />
        </image>

        <clip>
            <Circle centerX="100.0" centerY="100.0" radius="100.0" />
        </clip>
    </ImageView>

    <Label text="BNGSOCIAL" styleClass="app-title" />

    <Label text="Giriş Yap" styleClass="screen-title" />

    <TextField fx:id="usernameField" promptText="Kullanıcı Adı"
               styleClass="form-field" />

    <PasswordField fx:id="passwordField" promptText="Şifre"
                   styleClass="form-field" />

    <Button fx:id="signInButton" text="Giriş Yap" onAction="#handleSignIn"
            styleClass="primary-button" />

    <HBox styleClass="link-container" alignment="CENTER" spacing="20">
        <Label fx:id="registerLabel" text="Kayıt Ol"
               onMouseClicked="#openRegister"
               styleClass="link-label" />

        <Label fx:id="forgotPasswordLabel" text="Şifremi Unuttum"
               onMouseClicked="#openForgotPassword"
               styleClass="link-label" />
    </HBox>

</VBox>