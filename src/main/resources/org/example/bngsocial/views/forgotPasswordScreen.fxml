<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox spacing="10" alignment="CENTER"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.bngsocial.Controllers.ForgotPasswordController">

    <padding>
        <Insets top="20" bottom="20" left="20" right="20" />
    </padding>

    <Label text="Şifre Sıfırla" style="-fx-font-size: 22px; -fx-font-weight: bold;" />

    <TextField fx:id="usernameField" promptText="Kullanıcı Adı" prefWidth="260" />
    <TextField fx:id="emailField" promptText="Email" prefWidth="260" />
    <PasswordField fx:id="newPasswordField" promptText="Yeni Şifre" prefWidth="260" />
    <PasswordField fx:id="confirmPasswordField" promptText="Yeni Şifre Tekrar" prefWidth="260" />

    <Button fx:id="resetPasswordButton" text="Şifreyi Güncelle" onAction="#handleResetPassword" prefWidth="260"
            style="-fx-background-color: #FF9800; -fx-text-fill: white;" />

    <Button fx:id="backButton" text="Geri Dön" onAction="#handleBack" prefWidth="260"
            style="-fx-background-color: #f0f0f0; -fx-text-fill: #333;" />

</VBox>