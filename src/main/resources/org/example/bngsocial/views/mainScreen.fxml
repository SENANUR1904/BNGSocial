<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox spacing="15" alignment="CENTER"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.bngsocial.Controllers.MainScreenController">

    <padding>
        <Insets top="40" bottom="40" left="40" right="40" />
    </padding>

    <Label fx:id="welcomeLabel" text="Hoş geldin!" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <Label text="Paylaşım Yap" style="-fx-font-size: 18px; -fx-text-fill: #555;" />

    <TextArea fx:id="postArea" promptText="Bir şey paylaş..." prefRowCount="5" prefWidth="300" />

    <Button fx:id="postButton" text="Paylaş" onAction="#handlePost"
            style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-pref-width: 300px;" />

    <Button fx:id="logoutButton" text="Çıkış Yap" onAction="#handleLogout"
            style="-fx-font-size: 14px; -fx-background-color: #f0f0f0; -fx-text-fill: #333; -fx-pref-width: 300px;" />

</VBox>