<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">

    <Label text="Şifre Yenile" style="-fx-font-size: 22px; -fx-font-weight: bold;" />

    <TextField fx:id="usernameField" promptText="Kullanıcı Adı" />
    <PasswordField fx:id="newPasswordField" promptText="Yeni Şifre" />

    <Button fx:id="resetPasswordButton" text="Şifreyi Güncelle" />
    <Button fx:id="backButton" text="Geri Dön" />

</VBox>
