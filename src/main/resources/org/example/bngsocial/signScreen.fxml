<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml">

    <padding>
        <Insets top="40" bottom="40" left="20" right="20" />
    </padding>

    <Label text="Giriş Yap"
           style="-fx-font-size: 26px; -fx-font-weight: bold;" />

    <TextField fx:id="usernameField"
               promptText="Kullanıcı Adı"
               prefWidth="260" />

    <PasswordField fx:id="passwordField"
                   promptText="Şifre"
                   prefWidth="260" />

    <Button fx:id="signInButton"
            text="Giriş Yap"
            prefWidth="260"
            style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white;" />

    <HBox spacing="150" alignment="CENTER">
        <!-- Sol alt: Şifremi Unuttum -->
        <Label fx:id="forgotPasswordLabel"
               text="Şifremi Unuttum"
               style="-fx-text-fill: #2c5aa0; -fx-cursor: hand;"
               onMouseEntered="#onForgotPasswordMouseEnter"
               onMouseExited="#onForgotPasswordMouseExit"
               onMouseClicked="#openForgotPassword" />

        <!-- Sağ alt: Kayıt Ol -->
        <Label fx:id="registerLabel"
               text="Kayıt Ol"
               style="-fx-text-fill: #2c5aa0; -fx-cursor: hand;"
               onMouseEntered="#onRegisterMouseEnter"
               onMouseExited="#onRegisterMouseExit"
               onMouseClicked="#openRegister" />
    </HBox>

</VBox>